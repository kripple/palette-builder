{
  // save files automatically
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,

  // very important lint-on-save functionality
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.format.enable": true, // not sure about this one yet

  // personal preferences - code style
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  // "prettier.requireConfig": true,
  "prettier.singleQuote": true,
  "prettier.useEditorConfig": false,
  "prettier.trailingComma": "all",
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "typescript.format.insertSpaceAfterTypeAssertion": true,
  "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
  "editor.bracketPairColorization.enabled": false,

  // personal preferences - very important functionality
  "git.mergeEditor": false,
  "extensions.ignoreRecommendations": true,

  // personal preferences - functionality
  "emmet.showExpandedAbbreviation": "never",
  "diffEditor.ignoreTrimWhitespace": false,
  "npm.fetchOnlinePackageInfo": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "javascript.suggest.autoImports": false,
  "javascript.suggest.paths": false,
  "javascript.suggestionActions.enabled": false,
  "typescript.suggest.autoImports": false,
  "explorer.confirmDragAndDrop": false,
  "window.zoomLevel": 1
}
